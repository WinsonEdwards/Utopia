// Test Kotlin compilation
// Demonstrates Kotlin functions for Android development and backend

@lang kotlin {
function calculatePrice(basePrice, taxRate) {
    return basePrice * (1 + taxRate);
}

function formatMessage(userName, messageText) {
    return "Hello " + userName + ": " + messageText;
}

function validateInput(input) {
    return input != null && input != "";
}
}

@lang main {
let itemPrice = 99.99;
let tax = 0.08;
let finalPrice = kotlin::calculatePrice(itemPrice, tax);

let username = "Alice";
let message = "Welcome to our app!";
let formattedMsg = kotlin::formatMessage(username, message);

let userInput = "test input";
let isValid = kotlin::validateInput(userInput);

console.log("Final price: " + finalPrice);
console.log("Message: " + formattedMsg);
console.log("Input valid: " + isValid);
} 