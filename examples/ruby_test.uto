// Test Ruby compilation
// Demonstrates Ruby methods for web development and Ruby on Rails

@lang ruby {
function renderTemplate(templateName, data) {
    return templateName + " rendered with " + data;
}

function processWebRequest(url, method) {
    return "Processing " + method + " request to " + url;
}

function authenticateUser(username, password) {
    return username != "" && password != "";
}
}

@lang main {
let templateFile = "user_profile";
let userData = "John Doe";
let renderedPage = ruby::renderTemplate(templateFile, userData);

let requestUrl = "/api/users";
let httpMethod = "GET";
let requestResult = ruby::processWebRequest(requestUrl, httpMethod);

let user = "alice";
let pass = "secret123";
let isAuthenticated = ruby::authenticateUser(user, pass);

console.log("Rendered: " + renderedPage);
console.log("Request: " + requestResult);
console.log("Authenticated: " + isAuthenticated);
} 