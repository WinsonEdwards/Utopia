// Test Lua compilation
// Demonstrates Lua functions for game scripting and embedded systems

@lang lua {
function initializePlayer(name, level) {
    return "Player " + name + " initialized at level " + level;
}

function processGameEvent(eventType, data) {
    return "Processing game event: " + eventType + " with data: " + data;
}

function updateScore(currentScore, points) {
    return currentScore + points;
}
}

@lang main {
let playerName = "Hero";
let startLevel = 1;
let playerInit = lua::initializePlayer(playerName, startLevel);

let eventType = "enemy_defeated";
let eventData = "orc_warrior";
let eventResult = lua::processGameEvent(eventType, eventData);

let currentScore = 1500;
let earnedPoints = 250;
let newScore = lua::updateScore(currentScore, earnedPoints);

console.log("Player: " + playerInit);
console.log("Event: " + eventResult);
console.log("Score: " + newScore);
} 