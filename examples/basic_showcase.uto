// Python functions
@lang python {
    def greet(name):
        return "Hello " + name + " from Python!"
    
    def calculate_area(length, width):
        return length * width
    
    def process_list(numbers):
        total = 0
        for num in numbers:
            total += num
        return total
}

// JavaScript functions
@lang javascript {
    function welcome(name) {
        return "Welcome " + name + " to JavaScript!";
    }
    
    function multiply_numbers(a, b) {
        return a * b;
    }
    
    function create_message(user, action) {
        return user + " performed " + action + " successfully";
    }
}

// C functions
@lang c {
    int add_integers(int a, int b) {
        return a + b;
    }
    
    double calculate_circle_area(double radius) {
        return 3.14159 * radius * radius;
    }
    
    int factorial(int n) {
        if (n <= 1) return 1;
        return n * factorial(n - 1);
    }
}

// Rust functions
@lang rust {
    fn safe_division(a: f64, b: f64) -> f64 {
        if b != 0.0 {
            a / b
        } else {
            0.0
        }
    }
    
    fn count_characters(text: &str) -> usize {
        text.len()
    }
    
    fn is_even(number: i32) -> bool {
        number % 2 == 0
    }
}

