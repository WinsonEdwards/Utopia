// Test COBOL compilation
// Demonstrates COBOL functions for banking and legacy systems

@lang cobol {
function calculateInterest(principal, rate) {
    return principal * rate / 100;
}

function processTransaction(amount, accountBalance) {
    return accountBalance + amount;
}

function validateAccount(accountNumber) {
    return accountNumber > 0;
}
}

@lang main {
let loanAmount = 10000;
let interestRate = 5.5;
let interest = cobol::calculateInterest(loanAmount, interestRate);

let currentBalance = 2500.75;
let transactionAmount = 150.25;
let newBalance = cobol::processTransaction(transactionAmount, currentBalance);

let accountNum = 123456;
let isValidAccount = cobol::validateAccount(accountNum);

console.log("Interest: " + interest);
console.log("New balance: " + newBalance);
console.log("Account valid: " + isValidAccount);
} 