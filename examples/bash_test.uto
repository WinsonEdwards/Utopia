// Test Bash compilation
// Demonstrates Bash functions for shell scripting and system automation

@lang bash {
function deployApplication(appName, targetServer) {
    return "Deploying " + appName + " to " + targetServer;
}

function backupDatabase(dbName, backupPath) {
    return "Backing up " + dbName + " to " + backupPath;
}

function monitorSystemResources(threshold) {
    return "Monitoring system with threshold: " + threshold;
}
}

@lang main {
let application = "UtopiaWebApp";
let server = "production-server-01";
let deployResult = bash::deployApplication(application, server);

let database = "utopia_db";
let backupLocation = "/backups/daily/";
let backupResult = bash::backupDatabase(database, backupLocation);

let cpuThreshold = "80%";
let monitorResult = bash::monitorSystemResources(cpuThreshold);

console.log("Deploy: " + deployResult);
console.log("Backup: " + backupResult);
console.log("Monitor: " + monitorResult);
} 