// Test Perl compilation
// Demonstrates basic Perl code generation

@lang perl {
function greet(name) {
    return "Hello, " + name + "!";
}

function calculate(x, y) {
    return x * y + 5;
}
}

@lang main {
let userName = "Perl User";
let result = pl::calculate(10, 3);
let greeting = pl::greet(userName);

console.log(greeting);
console.log("Result: " + result);
} 