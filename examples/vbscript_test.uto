// Test VBScript compilation
// Demonstrates VBScript functions for Windows automation and scripting

@lang vbscript {
function automateExcel(workbookPath, sheetName) {
    return "Automating Excel: " + workbookPath + ", sheet: " + sheetName;
}

function createFileSystem(folderPath) {
    return "Creating folder structure at: " + folderPath;
}

function sendEmail(recipient, subject, body) {
    return "Sending email to " + recipient + " with subject: " + subject;
}
}

@lang main {
let excelFile = "C:\\Reports\\monthly_report.xlsx";
let targetSheet = "Summary";
let excelResult = vbscript::automateExcel(excelFile, targetSheet);

let newFolder = "C:\\Projects\\UtopiaOutput";
let folderResult = vbscript::createFileSystem(newFolder);

let emailTo = "admin@company.com";
let emailSubject = "Automated Report Generated";
let emailBody = "The monthly report has been generated successfully.";
let emailResult = vbscript::sendEmail(emailTo, emailSubject, emailBody);

console.log("Excel: " + excelResult);
console.log("Folder: " + folderResult);
console.log("Email: " + emailResult);
} 